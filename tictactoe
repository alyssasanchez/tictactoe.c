//Every variable represents the contents of a single row's cell, and letters represent the values of a single row.
//Nothing is returned
void showBoard(char* board) {
    printf("     |      |      \n");
    printf("  %c  |  %c  |  %c\n", board[0], board[1], board[2]);
    printf("     |      |      \n");
    printf("---------------------\n");
    printf("     |      |      \n");
    printf("  %c  |  %c  |  %c\n", board[3], board[4], board[5]);
    printf("     |      |      \n");
    printf("---------------------\n");
    printf("     |      |      \n");
    printf("  %c  |  %c  |  %c\n", board[6], board[7], board[8]);
    printf("     |      |      \n");
}

