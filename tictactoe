int checkWin( char *board , char playerCharacters)
{
if(board[0]==playerCharacters&&board[1]==playerCharacters&&board[2]==playerCharacters){
return 1;
}
else if (board [0]== playerCharacters&&board[3]==playerCharacters&&board[6]==playerCharacters){
return 1;
}
else if (board [0]== playerCharacters&&board[4]==playerCharacters&&board[8]==playerCharacters){
return 1;
}
else if (board [1]== playerCharacters&&board[4]==playerCharacters&&board[7]==playerCharacters){
return 1;
}
else if (board [2]== playerCharacters&&board[5]==playerCharacters&&board[8]==playerCharacters){
return 1;
}
else if (board [2]== playerCharacters&&board[4]==playerCharacters&&board[6]==playerCharacters){
return 1;
}
else if (board [3]== playerCharacters&&board[4]==playerCharacters&&board[5]==playerCharacters){
return 1;
}
else if (board [6]== playerCharacters&&board[7]==playerCharacters&&board[8]==playerCharacters){
return 1;
}
else{
return 0;
}
//Returns:It returns 0 if the game has ended; in any case, it returns non-zero. 
